<% include head.ejs%>

    <div class="row justify-content-center">
        <div class="col-sm-6 col-sm-offset-3 text-center">

            <h1> Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post" class="text-left">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" autofocus="true" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" />
                </div>

                <button type="button submit" class="btn btn-primary">Login</button>
            </form>
            <hr>
            <div>
                <p>Or login with Facebook or Google</p><br />
                <a style="margin-right:15px" href="/auth/facebook"><img src="/assets/fb-logo.png" /></a>
                <a style="margin-left:15px;margin-right:15px" href="/auth/google"><img style="width:29px" src="/assets/google-logo.png" /></a>
            </div>
            <hr>

            <p>Need to signup for an account? <a href="/signup">Signup</a></p>
            <a href="/">home</a>

        </div>
    </div>

<% include foot.ejs%>
